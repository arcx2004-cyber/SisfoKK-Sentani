---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="PPDB - Pendaftaran Peserta Didik Baru">
  <section class="hero" style="min-height: 350px;">
    <div class="hero-content">
      <span class="hero-badge">üìù Pendaftaran Online</span>
      <h1 class="hero-title">PPDB 2026/2027</h1>
      <p class="hero-subtitle">Pendaftaran Peserta Didik Baru Sekolah Kristen Kalam Kudus Sentani</p>
    </div>
  </section>

  <!-- Loading State -->
  <section class="section" id="loadingState">
    <div class="container" style="text-align: center;">
      <p>Memuat informasi PPDB...</p>
    </div>
  </section>

  <!-- Closed State -->
  <section class="section" id="closedState" style="display: none;">
    <div class="container">
      <div class="card" style="max-width: 700px; margin: 0 auto; text-align: center; padding: 3rem;">
        <div style="font-size: 4rem; margin-bottom: 1.5rem;">üîí</div>
        <h2 class="section-title" style="color: var(--error);">Pendaftaran Ditutup</h2>
        <p style="color: var(--gray-600); margin-bottom: 2rem;">
          Mohon maaf, pendaftaran PPDB saat ini belum dibuka atau sudah ditutup.
        </p>
        
        <div class="card" style="background: var(--primary-50); border: 2px solid var(--primary-200); margin-bottom: 2rem;">
          <h3 style="color: var(--primary-700); margin-bottom: 1rem;">üìÖ Jadwal Pendaftaran</h3>
          <p id="scheduleInfo" style="color: var(--gray-700);">Informasi jadwal akan ditampilkan di sini.</p>
        </div>

        <p style="color: var(--gray-500);">
          Untuk informasi lebih lanjut, silakan hubungi:
        </p>
        <a href="/kontak" class="btn btn-primary" style="margin-top: 1rem;">Hubungi Kami</a>
      </div>
    </div>
  </section>

  <!-- Open State - Registration Options -->
  <section class="section" id="openState" style="display: none;">
    <div class="container">
      <div class="section-header">
        <span class="section-badge" style="background: #d1fae5; color: #047857;">‚úÖ Pendaftaran Dibuka</span>
        <h2 class="section-title">Pilih Unit Pendidikan</h2>
        <p class="section-desc" id="periodInfo">Periode pendaftaran akan ditampilkan di sini.</p>
      </div>

      <div class="grid grid-3" id="unitCards">
        <!-- Unit cards will be populated by JavaScript -->
      </div>
    </div>
  </section>

  <!-- Registration Form (initially hidden) -->
  <section class="section" id="formSection" style="display: none;">
    <div class="container">
      <button onclick="showUnitSelection()" class="btn btn-outline" style="margin-bottom: 2rem;">
        ‚Üê Kembali ke Pilihan Unit
      </button>

      <div class="card" style="max-width: 800px; margin: 0 auto;">
        <h2 class="section-title" style="text-align: center; margin-bottom: 2rem;">
          Formulir Pendaftaran <span id="selectedUnitName"></span>
        </h2>

        <form id="ppdbForm">
          <input type="hidden" id="ppdb_setting_id" name="ppdb_setting_id" />
          <input type="hidden" id="selected_unit_code" name="unit_code" />

          <h3 style="color: var(--primary-700); margin-bottom: 1rem; padding-bottom: 0.5rem; border-bottom: 2px solid var(--primary-200);">üìã Data Pendaftaran</h3>
          <div class="grid grid-2" style="gap: 1rem; margin-bottom: 2rem;">
            <div>
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Jenis Pendaftaran *</label>
              <select name="jenis_pendaftaran" id="jenisPendaftaran" required class="form-input">
                <option value="">Pilih Jenis Pendaftaran</option>
                <option value="Murid Baru">Murid Baru</option>
                <option value="Mutasi">Mutasi</option>
              </select>
            </div>
            <div>
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Tingkat *</label>
              <select name="tingkat" id="tingkatSelect" required class="form-input">
                <option value="">Pilih Tingkat</option>
              </select>
            </div>
          </div>

          <h3 style="color: var(--primary-700); margin-bottom: 1rem; padding-bottom: 0.5rem; border-bottom: 2px solid var(--primary-200);">üìã Data Calon Siswa</h3>
          
          <div class="grid grid-2" style="gap: 1rem; margin-bottom: 2rem;">
            <div>
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Nama Lengkap *</label>
              <input type="text" name="nama_lengkap" required class="form-input" placeholder="Masukkan nama lengkap" />
            </div>
            <div>
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Jenis Kelamin *</label>
              <select name="jenis_kelamin" required class="form-input">
                <option value="">Pilih</option>
                <option value="L">Laki-laki</option>
                <option value="P">Perempuan</option>
              </select>
            </div>
            <div>
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Tempat Lahir *</label>
              <input type="text" name="tempat_lahir" required class="form-input" placeholder="Kota tempat lahir" />
            </div>
            <div>
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Tanggal Lahir *</label>
              <input type="date" name="tanggal_lahir" required class="form-input" />
            </div>
            <div>
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Agama *</label>
              <select name="agama" required class="form-input">
                <option value="">Pilih Agama</option>
                <option value="Kristen Protestan">Kristen Protestan</option>
                <option value="Katolik">Katolik</option>
                <option value="Islam">Islam</option>
                <option value="Hindu">Hindu</option>
                <option value="Buddha">Buddha</option>
                <option value="Konghucu">Konghucu</option>
              </select>
            </div>
            <div>
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Asal Sekolah</label>
              <input type="text" name="asal_sekolah" class="form-input" placeholder="Nama sekolah asal" />
            </div>
          </div>

          <div style="margin-bottom: 2rem;">
            <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Alamat Lengkap *</label>
            <textarea name="alamat" required class="form-input" rows="3" placeholder="Alamat lengkap tempat tinggal"></textarea>
          </div>

          <h3 style="color: var(--primary-700); margin-bottom: 1rem; padding-bottom: 0.5rem; border-bottom: 2px solid var(--primary-200);">üìû Kontak</h3>
          
          <div class="grid grid-2" style="gap: 1rem; margin-bottom: 2rem;">
            <div>
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Email *</label>
              <input type="email" name="email" required class="form-input" placeholder="email@example.com" />
            </div>
            <div>
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">No. WhatsApp *</label>
              <input type="tel" name="no_wa" required class="form-input" placeholder="08xxxxxxxxxx" />
            </div>
          </div>

          <h3 style="color: var(--primary-700); margin-bottom: 1rem; padding-bottom: 0.5rem; border-bottom: 2px solid var(--primary-200);">üë®‚Äçüë©‚Äçüëß Data Orang Tua</h3>
          
          <div class="grid grid-2" style="gap: 1rem; margin-bottom: 2rem;">
            <div>
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Nama Ayah *</label>
              <input type="text" name="nama_ayah" required class="form-input" placeholder="Nama lengkap ayah" />
            </div>
            <div>
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Pekerjaan Ayah</label>
              <input type="text" name="pekerjaan_ayah" class="form-input" placeholder="Pekerjaan ayah" />
            </div>
            <div>
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Nama Ibu *</label>
              <input type="text" name="nama_ibu" required class="form-input" placeholder="Nama lengkap ibu" />
            </div>
            <div>
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Pekerjaan Ibu</label>
              <input type="text" name="pekerjaan_ibu" class="form-input" placeholder="Pekerjaan ibu" />
            </div>
            <div class="grid-2-span">
              <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">No. Telepon Orang Tua *</label>
              <input type="tel" name="no_telepon_ortu" required class="form-input" placeholder="Nomor telepon yang dapat dihubungi" />
            </div>
          </div>

          <h3 style="color: var(--primary-700); margin-bottom: 1rem; padding-bottom: 0.5rem; border-bottom: 2px solid var(--primary-200);">üìé Upload Berkas</h3>
          
          <input type="hidden" id="selected_unit_code" name="unit_code" />
          
          <div style="margin-bottom: 2rem;">
            <div style="background: var(--primary-50); padding: 1rem; border-radius: var(--radius); margin-bottom: 1.5rem;">
              <p style="color: var(--primary-700); font-weight: 600; margin-bottom: 0.5rem;">üìã Persyaratan Berkas:</p>
              <ul id="dokumenRequirements" style="color: var(--gray-600); margin: 0; padding-left: 1.5rem;">
                <li>Akta Kelahiran</li>
                <li>Kartu Keluarga (KK)</li>
              </ul>
            </div>

            <div class="grid grid-2" style="gap: 1rem;">
              <div>
                <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Pas Foto (Ukuran 4x6) *</label>
                <input type="file" name="pas_foto" required accept=".jpg,.jpeg,.png" class="form-input file-input" />
                <small style="color: var(--gray-500);">Format: JPG, PNG (Maks. 2MB). Wajah terlihat jelas.</small>
              </div>
              <div>
                <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Akta Kelahiran *</label>
                <input type="file" name="akta_kelahiran" required accept=".pdf,.jpg,.jpeg,.png" class="form-input file-input" />
                <small style="color: var(--gray-500);">Format: PDF, JPG, PNG (Maks. 2MB)</small>
              </div>
              <div>
                <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Kartu Keluarga (KK) *</label>
                <input type="file" name="kartu_keluarga" required accept=".pdf,.jpg,.jpeg,.png" class="form-input file-input" />
                <small style="color: var(--gray-500);">Format: PDF, JPG, PNG (Maks. 2MB)</small>
              </div>
              <div id="ijazahField" style="display: none;" class="grid-2-span">
                <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Ijazah / SKHU *</label>
                <input type="file" name="ijazah_skhu" accept=".pdf,.jpg,.jpeg,.png" class="form-input file-input" id="ijazahInput" />
                <small style="color: var(--gray-500);">Format: PDF, JPG, PNG (Maks. 2MB)</small>
              </div>
            </div>
          </div>

          <button type="submit" class="btn btn-primary" style="width: 100%; padding: 1rem; font-size: 1.1rem;" id="submitBtn">
            Kirim Pendaftaran
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- Success Message -->
  <section class="section" id="successState" style="display: none;">
    <div class="container">
      <div class="card" style="max-width: 600px; margin: 0 auto; text-align: center; padding: 3rem;">
        <div style="font-size: 4rem; margin-bottom: 1.5rem;">‚úÖ</div>
        <h2 class="section-title" style="color: var(--success);">Pendaftaran Berhasil!</h2>
        <p style="color: var(--gray-600); margin-bottom: 1rem;">
          Terima kasih telah mendaftar di Sekolah Kristen Kalam Kudus Sentani.
        </p>
        <div class="card" style="background: var(--primary-50); margin-bottom: 2rem;">
          <p style="font-weight: 600; color: var(--primary-700);">Nomor Pendaftaran Anda:</p>
          <p id="registrationNumber" style="font-size: 1.5rem; font-weight: 800; color: var(--primary-800);"></p>
        </div>
        <p style="color: var(--gray-500); font-size: 0.9rem;">
          Simpan nomor pendaftaran ini untuk keperluan selanjutnya. 
          Kami akan menghubungi Anda melalui email atau WhatsApp.
        </p>
        <a href="/" class="btn btn-primary" style="margin-top: 1.5rem;">Kembali ke Beranda</a>
      </div>
    </div>
  </section>

  <style>
    .form-input {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 1px solid var(--gray-300);
      border-radius: var(--radius);
      font-size: 1rem;
      transition: border-color 0.2s, box-shadow 0.2s;
    }
    .form-input:focus {
      outline: none;
      border-color: var(--primary-500);
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }
    .file-input {
      padding: 0.5rem;
      background: var(--gray-50);
      cursor: pointer;
    }
    .file-input::file-selector-button {
      padding: 0.5rem 1rem;
      border: none;
      background: var(--primary-600);
      color: white;
      border-radius: var(--radius);
      cursor: pointer;
      margin-right: 1rem;
      transition: background 0.2s;
    }
    .file-input::file-selector-button:hover {
      background: var(--primary-700);
    }
    .grid-2-span {
      grid-column: span 2;
    }
    .unit-info-sections {
      text-align: left;
      margin: 1.5rem 0;
      font-size: 0.9rem;
      border-top: 1px solid var(--gray-100);
      padding-top: 1rem;
    }
    .info-section {
      margin-bottom: 1.25rem;
    }
    .info-section-title {
      color: var(--primary-700);
      font-weight: 700;
      margin-bottom: 0.5rem;
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .info-section-content {
      color: var(--gray-600);
      line-height: 1.6;
    }
    .info-section-content p {
      margin-bottom: 0.5rem;
    }
    .info-section-content ul, .info-section-content ol {
      padding-left: 1.25rem;
      margin-bottom: 0.5rem;
    }
    .unit-fee {
      margin: 1rem 0 1.5rem;
      padding: 1rem;
      background: var(--primary-50);
      border-radius: var(--radius);
      color: var(--primary-800);
      text-align: center;
    }
    .unit-fee-label {
      display: block;
      font-size: 0.75rem;
      font-weight: 700;
      color: var(--primary-600);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 0.25rem;
    }
    .unit-fee-value {
      font-size: 1.25rem;
      font-weight: 800;
      display: block;
    }

    @media (max-width: 640px) {
      .grid-2-span {
        grid-column: span 1;
      }
    }
  </style>

  <script>
    const API_BASE = import.meta.env.PUBLIC_API_URL || 'https://skkksentani.web.id/api/v1';
    let ppdbData = [];

    async function loadPpdbStatus() {
      try {
        const response = await fetch(`${API_BASE}/ppdb/info`);
        const result = await response.json();

        document.getElementById('loadingState').style.display = 'none';

        if (result.success) {
          ppdbData = result.data;

          console.log('PPDB Data:', ppdbData); 
          if (result.is_any_open) {
            showOpenState();
          } else {
            console.log('No open PPDB found');
            showClosedState();
          }
        } else {
          console.error('API returned success:false');
          showClosedState();
        }
      } catch (error) {
        console.error('Error loading PPDB status:', error);
        // alert('Error loading PPDB: ' + error.message); // Debugging
        document.getElementById('loadingState').style.display = 'none';
        showClosedState();
      }
    }

    function showClosedState() {
      document.getElementById('closedState').style.display = 'block';
      document.getElementById('openState').style.display = 'none';
      document.getElementById('formSection').style.display = 'none';

      // Show schedule info if available
      if (ppdbData.length > 0) {
        const nextPpdb = ppdbData.find(p => p.is_active) || ppdbData[0];
        if (nextPpdb) {
          const scheduleHtml = `
            <strong>Pendaftaran berikutnya:</strong><br>
            ${nextPpdb.tanggal_buka_formatted || 'Belum ditentukan'} - ${nextPpdb.tanggal_tutup_formatted || 'Belum ditentukan'}
          `;
          document.getElementById('scheduleInfo').innerHTML = scheduleHtml;
        }
      }
    }

    function showOpenState() {
      document.getElementById('closedState').style.display = 'none';
      document.getElementById('openState').style.display = 'block';
      document.getElementById('formSection').style.display = 'none';

      const openPpdb = ppdbData.filter(p => p.is_open);
      
      // Show period info
      if (openPpdb.length > 0) {
        const first = openPpdb[0];
        document.getElementById('periodInfo').innerHTML = `
          Periode pendaftaran: <strong>${first.tanggal_buka_formatted}</strong> s/d <strong>${first.tanggal_tutup_formatted}</strong>
        `;
      }

      // Populate unit cards
      const unitCardsHtml = openPpdb.map(ppdb => `
        <div class="unit-card">
          <div class="unit-icon">${getUnitIcon(ppdb.unit?.kode)}</div>
          <h3 class="unit-name">${ppdb.unit?.nama || 'Unit'}</h3>
          <p class="unit-desc">Tahun Ajaran ${ppdb.tahun_ajaran?.nama || ''}</p>
          
          <div class="unit-info-sections">
            ${ppdb.alur_pendaftaran ? `
              <div class="info-section">
                <h4 class="info-section-title"><span>üõ§Ô∏è</span> Alur Pendaftaran</h4>
                <div class="info-section-content">${ppdb.alur_pendaftaran}</div>
              </div>
            ` : ''}
            ${ppdb.persyaratan ? `
              <div class="info-section">
                <h4 class="info-section-title"><span>üìã</span> Persyaratan</h4>
                <div class="info-section-content">${ppdb.persyaratan}</div>
              </div>
            ` : ''}
          </div>

          <div class="unit-fee">
            <span class="unit-fee-label">Biaya Pendaftaran</span>
            <span class="unit-fee-value">Rp ${formatNumber(ppdb.biaya_pendaftaran || 0)}</span>
          </div>

          <button class="btn btn-primary daftar-btn" data-id="${ppdb.id}" data-unit="${encodeURIComponent(ppdb.unit?.nama || 'Unit')}" data-unit-code="${ppdb.unit?.kode || ''}">
            Daftar Sekarang
          </button>
        </div>
      `).join('');

      document.getElementById('unitCards').innerHTML = unitCardsHtml;

      // Add click handlers
      document.querySelectorAll('.daftar-btn').forEach(btn => {
        btn.addEventListener('click', function() {
          const id = this.getAttribute('data-id');
          const unitName = decodeURIComponent(this.getAttribute('data-unit'));
          const unitCode = this.getAttribute('data-unit-code');
          showForm(id, unitName, unitCode);
        });
      });
    }

    function showForm(ppdbSettingId, unitName, unitCode) {
      document.getElementById('openState').style.display = 'none';
      document.getElementById('formSection').style.display = 'block';
      document.getElementById('ppdb_setting_id').value = ppdbSettingId;
      document.getElementById('selectedUnitName').textContent = unitName;
      document.getElementById('selected_unit_code').value = unitCode;
      document.getElementById('jenisPendaftaran').value = ''; // Reset to placeholder
      
      if (unitCode === 'TK') {
        ijazahField.style.display = 'none';
        ijazahInput.removeAttribute('required');
        requirements.innerHTML = '<li>Akta Kelahiran</li><li>Kartu Keluarga (KK)</li>';
      } else {
        // SD or SMP
        ijazahField.style.display = 'block';
        ijazahInput.setAttribute('required', 'required');
        requirements.innerHTML = '<li>Akta Kelahiran</li><li>Kartu Keluarga (KK)</li><li>Ijazah / SKHU</li>';
      }

      // Initial populate of tingkat options (will be empty because jenisPendaftaran is reset)
      updateTingkatOptions();
      
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function updateTingkatOptions() {
      const unitCode = document.getElementById('selected_unit_code').value;
      const jenisPendaftaran = document.getElementById('jenisPendaftaran').value;
      const tingkatSelect = document.getElementById('tingkatSelect');
      
      let options = [];

      if (!jenisPendaftaran && (unitCode === 'SD' || unitCode === 'SMP')) {
        options = []; // No options until type is selected for SD/SMP
      } else if (unitCode === 'TK') {
        options = [
          { value: 'KB (umur 3 tahun)', label: 'KB (umur 3 tahun)' },
          { value: 'TK A (umur 4 Tahun)', label: 'TK A (umur 4 Tahun)' },
          { value: 'TK B (umur 5 Tahun)', label: 'TK B (umur 5 Tahun)' }
        ];
      } else if (unitCode === 'SD') {
        if (jenisPendaftaran === 'Murid Baru') {
          options = [{ value: 'Kelas 1', label: 'Kelas 1' }];
        } else if (jenisPendaftaran === 'Mutasi') {
          options = [
            { value: 'Kelas 2', label: 'Kelas 2' },
            { value: 'Kelas 3', label: 'Kelas 3' },
            { value: 'Kelas 4', label: 'Kelas 4' },
            { value: 'Kelas 5', label: 'Kelas 5' },
            { value: 'Kelas 6', label: 'Kelas 6' }
          ];
        }
      } else if (unitCode === 'SMP') {
        if (jenisPendaftaran === 'Murid Baru') {
          options = [{ value: 'Kelas 7', label: 'Kelas 7' }];
        } else if (jenisPendaftaran === 'Mutasi') {
          options = [
            { value: 'Kelas 8', label: 'Kelas 8' },
            { value: 'Kelas 9', label: 'Kelas 9' }
          ];
        }
      }

      tingkatSelect.innerHTML = '<option value="">Pilih Tingkat</option>' + 
        options.map(opt => `<option value="${opt.value}">${opt.label}</option>`).join('');
    }

    document.getElementById('jenisPendaftaran').addEventListener('change', updateTingkatOptions);

    function showUnitSelection() {
      showOpenState();
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function getUnitIcon(code) {
      const icons = { 'TK': 'üå∏', 'SD': 'üìö', 'SMP': 'üéì' };
      return icons[code] || 'üè´';
    }

    function formatNumber(num) {
      return new Intl.NumberFormat('id-ID').format(num);
    }

    // Form submission
    document.getElementById('ppdbForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const submitBtn = document.getElementById('submitBtn');
      const originalText = submitBtn.textContent;
      submitBtn.disabled = true;
      submitBtn.textContent = 'Mengirim...';
      
      const formData = new FormData(e.target);

      try {
        const response = await fetch(`${API_BASE}/ppdb/register`, {
          method: 'POST',
          headers: {
            'Accept': 'application/json',
          },
          body: formData,
        });

        const result = await response.json();

        if (result.success) {
          document.getElementById('formSection').style.display = 'none';
          document.getElementById('successState').style.display = 'block';
          document.getElementById('registrationNumber').textContent = result.data.nomor_pendaftaran;
          window.scrollTo({ top: 0, behavior: 'smooth' });
        } else {
          alert('Gagal mengirim pendaftaran: ' + (result.message || 'Silakan coba lagi'));
          submitBtn.disabled = false;
          submitBtn.textContent = originalText;
        }
      } catch (error) {
        console.error('Error:', error);
