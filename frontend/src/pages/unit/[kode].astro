---
import Layout from '../../layouts/Layout.astro';

// Static paths for unit pages
export function getStaticPaths() {
  return [
    { params: { kode: 'tk' } },
    { params: { kode: 'sd' } },
    { params: { kode: 'smp' } },
  ];
}

// Get the unit code from the URL
const { kode } = Astro.params;
---

<Layout title="Loading...">
  <section class="hero" style="min-height: 350px;" id="heroSection">
    <div class="hero-content">
      <span class="hero-badge" id="heroBadge">ğŸ« Unit Pendidikan</span>
      <h1 class="hero-title" id="heroTitle">Memuat...</h1>
      <p class="hero-subtitle" id="heroSubtitle"></p>
    </div>
  </section>

  <!-- Loading State -->
  <section class="section" id="loadingState">
    <div class="container" style="text-align: center;">
      <p>Memuat informasi unit...</p>
    </div>
  </section>

  <!-- Content -->
  <div id="contentWrapper" style="display: none;">
    <!-- Sekilas Section -->
    <section class="section">
      <div class="container">
        <div class="grid grid-2" style="gap: 3rem; align-items: center;">
          <div>
            <span class="section-badge">Tentang Kami</span>
            <h2 class="section-title">Sekilas</h2>
            <p id="sekilasText" style="color: var(--gray-600); line-height: 1.8;"></p>
            <div id="kontenDetail" style="margin-top: 1.5rem; color: var(--gray-700);"></div>
          </div>
          <div>
            <img id="fotoSekolah" src="" alt="Foto Sekolah" style="width: 100%; border-radius: var(--radius-lg); box-shadow: var(--shadow-lg);" />
          </div>
        </div>
      </div>
    </section>

    <!-- Kepala Sekolah Section -->
    <section class="section" style="background: var(--gray-100);">
      <div class="container">
        <div class="section-header">
          <span class="section-badge">Pimpinan</span>
          <h2 class="section-title">Kepala Sekolah</h2>
        </div>
        <div class="card" style="max-width: 400px; margin: 0 auto; text-align: center; padding: 2rem;">
          <img id="fotoKepsek" src="https://via.placeholder.com/150" alt="Kepala Sekolah" style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover; margin-bottom: 1rem; border: 4px solid var(--primary-500);" />
          <h3 id="namaKepsek" style="color: var(--gray-800);"></h3>
          <p style="color: var(--primary-600);">Kepala Sekolah</p>
        </div>
      </div>
    </section>

    <!-- Visi Misi Section -->
    <section class="section">
      <div class="container">
        <div class="grid grid-2" style="gap: 2rem;">
          <div class="card" style="border-top: 4px solid var(--primary-500);">
            <h3 style="color: var(--primary-700); margin-bottom: 1rem;">ğŸ¯ Visi</h3>
            <p id="visiText" style="color: var(--gray-600); font-style: italic;"></p>
          </div>
          <div class="card" style="border-top: 4px solid var(--primary-500);">
            <h3 style="color: var(--primary-700); margin-bottom: 1rem;">ğŸš€ Misi</h3>
            <p id="misiText" style="color: var(--gray-600); white-space: pre-line;"></p>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="section" style="background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-800) 100%); color: white;">
      <div class="container">
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-icon">ğŸ‘¨â€ğŸ“</div>
            <div class="stat-number" id="siswaCount">0</div>
            <div class="stat-label">Siswa Aktif</div>
          </div>
          <div class="stat-card">
            <div class="stat-icon">ğŸ‘¨â€ğŸ«</div>
            <div class="stat-number" id="guruCount">0</div>
            <div class="stat-label">Tenaga Pendidik</div>
          </div>
          <div class="stat-card">
            <div class="stat-icon">â°</div>
            <div class="stat-number" id="jamBelajar" style="font-size: 1.5rem;">-</div>
            <div class="stat-label">Jam Belajar</div>
          </div>
          <div class="stat-card">
            <div class="stat-icon">ğŸ“</div>
            <div class="stat-number" id="teleponUnit" style="font-size: 1rem;">-</div>
            <div class="stat-label">Hubungi Kami</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Fasilitas Section -->
    <section class="section" id="fasilitasSection">
      <div class="container">
        <div class="section-header">
          <span class="section-badge">ğŸ¢</span>
          <h2 class="section-title">Fasilitas</h2>
        </div>
        <ul id="fasilitasList" class="feature-list"></ul>
      </div>
    </section>

    <!-- Galeri Guru Section -->
    <section class="section" style="background: var(--gray-100);" id="guruSection">
      <div class="container">
        <div class="section-header">
          <span class="section-badge">ğŸ‘¨â€ğŸ« Tenaga Pendidik</span>
          <h2 class="section-title">Dewan Guru</h2>
        </div>
        <div class="grid grid-4" id="guruGrid">
          <!-- Guru cards will be populated here -->
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
      <div class="container">
        <h2 class="cta-title">Tertarik Bergabung?</h2>
        <p class="cta-desc">Daftarkan putra-putri Anda untuk mendapatkan pendidikan terbaik</p>
        <a href="/ppdb" class="btn">Daftar PPDB</a>
      </div>
    </section>
  </div>

  <!-- Not Found -->
  <section class="section" id="notFoundState" style="display: none;">
    <div class="container" style="text-align: center;">
      <div style="font-size: 4rem; margin-bottom: 1.5rem;">ğŸ˜•</div>
      <h2 class="section-title">Unit Tidak Ditemukan</h2>
      <p style="color: var(--gray-600);">Unit yang Anda cari tidak tersedia.</p>
      <a href="/unit" class="btn btn-primary" style="margin-top: 1.5rem;">Lihat Semua Unit</a>
    </div>
  </section>

  <style>
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 2rem;
      text-align: center;
    }
    .stat-card {
      padding: 1.5rem;
      background: rgba(255, 255, 255, 0.1);
      border-radius: var(--radius-lg);
      backdrop-filter: blur(10px);
      transition: transform 0.3s ease;
    }
    .stat-card:hover {
      transform: translateY(-5px);
      background: rgba(255, 255, 255, 0.15);
    }
    .stat-icon {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
    }
    .stat-number {
      font-size: 2.5rem;
      font-weight: 700;
      line-height: 1.2;
    }
    .stat-label {
      font-size: 0.9rem;
      opacity: 0.9;
      margin-top: 0.25rem;
    }
    .feature-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
      list-style: none;
      padding: 0;
      max-width: 900px;
      margin: 0 auto;
    }
    .feature-list li {
      background: white;
      padding: 1rem 1.5rem;
      border-radius: var(--radius);
      box-shadow: var(--shadow-sm);
      display: flex;
      align-items: center;
      gap: 0.75rem;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .feature-list li:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow);
    }
    .feature-list li::before {
      content: 'âœ“';
      color: var(--success);
      font-weight: bold;
      font-size: 1.2rem;
    }
    .grid-4 {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
    }
    .guru-card {
      background: white;
      border-radius: var(--radius-lg);
      padding: 1.5rem;
      text-align: center;
      box-shadow: var(--shadow);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .guru-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-lg);
    }
    .guru-card img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 1rem;
      border: 3px solid var(--primary-200);
    }
    .guru-card h4 {
      color: var(--gray-800);
      margin-bottom: 0.25rem;
    }
    .guru-card p {
      color: var(--gray-500);
      font-size: 0.875rem;
    }
  </style>

  <script define:vars={{ kode }}>
    const API_BASE = 'https://sisfokk-sentani-administrasi.vercel.app/api/v1';
    const STORAGE_BASE = 'https://sisfokk-sentani-administrasi.vercel.app/storage/';
    const unitKode = kode || window.location.pathname.split('/').pop();

    function animateNumber(elementId, target) {
      const element = document.getElementById(elementId);
      if (!element) return;
      
      const duration = 1500;
      const start = 0;
      const startTime = performance.now();
      
      function update(currentTime) {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);
        const easeOut = 1 - Math.pow(1 - progress, 3);
        const current = Math.floor(start + (target - start) * easeOut);
        element.textContent = current.toLocaleString('id-ID');
        
        if (progress < 1) {
          requestAnimationFrame(update);
        }
      }
      
      requestAnimationFrame(update);
    }


    async function loadUnit() {
      try {
        const response = await fetch(`${API_BASE}/units/${unitKode}`);
        const result = await response.json();

        document.getElementById('loadingState').style.display = 'none';

        if (result.success && result.data) {
          displayUnit(result.data);
        } else {
          document.getElementById('notFoundState').style.display = 'block';
        }
      } catch (error) {
        console.error('Error:', error);
        document.getElementById('loadingState').style.display = 'none';
        document.getElementById('notFoundState').style.display = 'block';
      }
    }

    function displayUnit(unit) {
      document.title = `${unit.nama} | SisfoKK Sentani`;
      
      // Hero
      document.getElementById('heroBadge').textContent = `ğŸ« ${unit.kode}`;
      document.getElementById('heroTitle').textContent = unit.nama;
      document.getElementById('heroSubtitle').textContent = unit.deskripsi || '';

      // Sekilas
      document.getElementById('sekilasText').textContent = unit.sekilas || unit.deskripsi || 'Informasi tentang unit ini.';
      document.getElementById('kontenDetail').innerHTML = unit.konten || '';

      // Foto Sekolah
      const fotoSekolah = unit.foto_sekolah 
        ? STORAGE_BASE + unit.foto_sekolah 
        : 'https://images.unsplash.com/photo-1580582932707-520aed937b7b?w=600&h=400&fit=crop';
      document.getElementById('fotoSekolah').src = fotoSekolah;

      // Kepala Sekolah
      document.getElementById('namaKepsek').textContent = unit.kepala_sekolah || 'Belum ditentukan';
      const fotoKepsek = unit.foto_kepala_sekolah 
        ? STORAGE_BASE + unit.foto_kepala_sekolah 
        : 'https://via.placeholder.com/150?text=Kepsek';
      document.getElementById('fotoKepsek').src = fotoKepsek;

      // Visi Misi
      document.getElementById('visiText').textContent = unit.visi || 'Visi belum diatur.';
      document.getElementById('misiText').textContent = unit.misi || 'Misi belum diatur.';

      // Stats
      animateNumber('siswaCount', unit.siswas_count || 0);
      animateNumber('guruCount', unit.gurus_count || 0);
      document.getElementById('jamBelajar').textContent = unit.jam_belajar || '-';
      document.getElementById('teleponUnit').textContent = unit.telepon || '-';

      // Fasilitas
      if (unit.fasilitas) {
        const fasilitasItems = unit.fasilitas.split('\n').filter(f => f.trim());
        document.getElementById('fasilitasList').innerHTML = fasilitasItems
          .map(f => `<li>${f.trim()}</li>`)
          .join('');
      } else {
        document.getElementById('fasilitasSection').style.display = 'none';
      }

      // Guru
      if (unit.gurus && unit.gurus.length > 0) {
        document.getElementById('guruGrid').innerHTML = unit.gurus.map(guru => `
          <div class="guru-card">
            <img src="${guru.foto ? STORAGE_BASE + guru.foto : 'https://ui-avatars.com/api/?name=' + encodeURIComponent(guru.nama_lengkap) + '&background=3b82f6&color=fff&size=100'}" alt="${guru.nama_lengkap}" />
            <h4>${guru.nama_lengkap}</h4>
            <p>${guru.nip || ''}</p>
          </div>
        `).join('');
      } else {
        document.getElementById('guruSection').style.display = 'none';
      }

      document.getElementById('contentWrapper').style.display = 'block';
    }

    loadUnit();
  </script>
</Layout>
